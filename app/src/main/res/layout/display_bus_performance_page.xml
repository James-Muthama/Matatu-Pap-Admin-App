<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#9D00FF">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/topNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="#9D00FF"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/topNavCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            app:cardBackgroundColor="#9D00FF">

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:layout_margin="15dp"
                android:padding="20dp"
                app:srcCompat="@drawable/back_icon" />

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:padding="13dp"
                android:src="@drawable/logo" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Main Content Container -->
    <ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/topNavBar"
        app:layout_constraintBottom_toTopOf="@+id/bottomDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/mainContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <!-- Page Title -->
            <TextView
                android:id="@+id/pageTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_margin="5dp"
                android:text="@string/bus_performance_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#fff"
                android:textSize="39sp"
                android:textStyle="bold" />

            <!-- Selection Controls Row -->
            <LinearLayout
                android:id="@+id/selectionControlsLayout"
                android:layout_width="448dp"
                android:layout_height="170dp"
                android:elevation="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:padding="15dp">

                <!-- Bus 1 Selection Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/bus1SelectCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#9D00FF"
                        android:gravity="center"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/bus1IconImageView"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/bus_icon"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/bus1PlateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/choose_bus_1_txt"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Time Period Selection Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/timePeriodCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#9D00FF"
                        android:padding="3dp">

                        <TextView
                            android:id="@+id/timePeriodLabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/choose_time_period_txt"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:gravity="center"/>

                        <Spinner
                            android:id="@+id/timePeriodSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/rounded_input"
                            tools:ignore="TextFields" />

                        <Spinner
                            android:id="@+id/dateSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/rounded_input"
                            tools:ignore="TextFields" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Metric Row 1: Total Trips -->
            <LinearLayout
                android:id="@+id/totalTripsRow"
                android:layout_width="448dp"
                android:layout_height="80dp"
                android:elevation="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/totalTripsLabelCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#9D00FF"
                        android:padding="3dp">

                        <TextView
                            android:id="@+id/totalTripsLabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/stat_1"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/bus2TripsValueLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/bus2TotalTripsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Metric Row 2: Total Income -->
            <LinearLayout
                android:id="@+id/totalIncomeRow"
                android:layout_width="448dp"
                android:layout_height="80dp"
                android:elevation="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/totalIncomeLabelCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#9D00FF"
                        android:padding="3dp">

                        <TextView
                            android:id="@+id/totalIncomeLabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/stat_2"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/bus2IncomeValueLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/bus2TotalIncomeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="KSh 0.00"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Metric Row 3: Total Expenses -->
            <LinearLayout
                android:id="@+id/totalExpensesRow"
                android:layout_width="448dp"
                android:layout_height="80dp"
                android:elevation="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/totalExpensesLabelCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#9D00FF"
                        android:padding="3dp">

                        <TextView
                            android:id="@+id/totalExpensesLabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/stat_3"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/bus2ExpensesValueLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/bus2TotalExpensesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="KSh 0.00"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Metric Row 4: Net Profit -->
            <LinearLayout
                android:id="@+id/netProfitRow"
                android:layout_width="448dp"
                android:layout_height="80dp"
                android:elevation="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/netProfitLabelCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#9D00FF"
                        android:padding="3dp">

                        <TextView
                            android:id="@+id/netProfitLabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/stat_4"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/bus2ProfitValueLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/bus2NetProfitTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="KSh 0.00"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Metric Row 5: Profit Margin -->
            <LinearLayout
                android:id="@+id/profitMarginRow"
                android:layout_width="448dp"
                android:layout_height="80dp"
                android:elevation="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_marginBottom="25dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/profitMarginLabelCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#9D00FF"
                        android:padding="3dp">

                        <TextView
                            android:id="@+id/profitMarginLabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/txt_profit_mrgn"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/bus2MarginValueLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/bus2ProfitMarginTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="0.0"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Divider -->
    <LinearLayout
        android:id="@+id/bottomDivider"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/homeIconCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="#9D00FF"
                android:contentDescription="@string/home_icon_description"
                android:padding="20dp"
                android:src="@drawable/home_icon"
                app:tint="#FFFFFF"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/receiptsIconCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/receiptsIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:contentDescription="@string/receipts_icon_description"
                android:padding="20dp"
                android:src="@drawable/receipt_icon"
                app:tint="#9D00FF" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/profileIconCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9D00FF"
                android:contentDescription="@string/profile_icon_description"
                android:padding="20dp"
                android:src="@drawable/person_icon" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>